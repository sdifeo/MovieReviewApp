<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieReviewApp.SignIn">
    
    <StackLayout>

        <Frame BackgroundColor="#BA8F95" HeightRequest="200" HorizontalOptions="FillAndExpand"></Frame>

        <StackLayout Margin="15, -50, 15, 0">

            <Frame HasShadow="True" HeightRequest="400" HorizontalOptions="FillAndExpand">
                <StackLayout>
                    <StackLayout>
                        <Image Source="../"></Image>
                    </StackLayout>


                    <StackLayout>
                        <Label FontFamily="Arial" Text="Log in" TextColor="Black" FontSize="30" HorizontalTextAlignment="Center" ></Label>
                    </StackLayout>

                    <StackLayout>
                        <Entry Placeholder="email" x:Name="input_email"></Entry>
                        <Entry IsPassword="True" Placeholder="password" x:Name="input_password"></Entry>
                    </StackLayout>

                    <Button Margin="0, 40, 0, 0"  Text="Sign in" CornerRadius="20" VerticalOptions="End" BackgroundColor="#BA8F95" Clicked="User_Login"></Button>


                    <StackLayout Margin="0, 70, 0, 0">
                        <Button Padding="0" Text="Need an account?" TextColor="Black" BackgroundColor="White" Clicked="Button_Clicked"></Button>
                    </StackLayout>
                </StackLayout>



            </Frame>

        </StackLayout>
    </StackLayout>
</ContentPage>